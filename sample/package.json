{
  "name": "io.cordova.hellosentrycordova",
  "displayName": "SentryCordova",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "author": "Sentry Team and Contributors",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "open-xcode": "open ./platforms/ios/HelloSentry.xcworkspace",
    "ios": "yarn cordova emulate ios",
    "android": "yarn cordova emulate android",
    "build": "yarn build:android && yarn build:ios",
    "build:ios": "yarn cordova build ios",
    "build:android": "yarn cordova build android",
    "platforms:add": "node scripts/add-platforms.js",
    "platforms:remove": "node scripts/remove-platforms.js",
    "platforms:reset": "yarn platforms:remove && yarn playforms:add ",
    "sentry:remove": "yarn cordova plugins remove sentry-cordova",
    "sentry:add": "yarn cordova plugins add ./sentry-sdk"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "dependencies": {
    "cordova": "^12.0.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "cordova-android": "^14.0.1",
    "cordova-browser": "^7.0.0",
    "cordova-ios": "^7.1.1",
    "sentry-cordova": "file:sentry-sdk"
  },
  "resolutions": {
    "cross-spawn": "7.0.5",
    "braces": "3.0.3"
  },
  "cordova": {
    "platforms": [
      "android",
      "browser",
      "ios"
    ],
    "plugins": {
      "sentry-cordova": {}
    }
  }
}
